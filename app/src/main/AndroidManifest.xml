<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wickeddevs.easywars">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.loadingsplash.LoadingSplashActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.home.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.noclan.NoClanActivity"
            android:label="Setup"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.noclan.create.CreateClanActivity"
            android:label="Create Clan"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.noclan.verifycreate.VerifyCreateClanActivity"
            android:label="Verify Ownership"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.noclan.join.JoinClanActivity"
            android:label="Join Clan"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.noclan.verifyjoin.VerifyJoinClanActivity"
            android:label="Awaiting Approval"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.noclan.search.SearchClansActivity"
            android:label=""
            android:screenOrientation="portrait"/>
    </application>

</manifest>