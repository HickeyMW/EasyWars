<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="wickeddevs.easywars.ui.home.war.WarPlannerFragment"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layoutMain">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:id="@+id/layoutHeader"
                android:visibility="gone"
                android:background="@color/material_grey_300"
                android:translationZ="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="War vs Enemy Clan"
                    android:id="@+id/tvTitle"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Time remaining: 24:00"
                    android:id="@+id/tvTimeRemaining"
                    android:layout_below="@+id/tvTitle"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/layoutHeader"
                android:id="@+id/rvWarBases"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            android:layout_margin="20dp"
            android:layout_centerVertical="true">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/popup">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvNoWar"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20sp"
                    android:layout_margin="20dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start War"
                    android:id="@+id/btnCreate"
                    style="?attr/borderlessButtonStyle"
                    android:layout_gravity="right"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:visibility="invisible"/>

    </RelativeLayout>
</layout>