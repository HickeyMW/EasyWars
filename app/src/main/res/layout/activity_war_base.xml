<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="wickeddevs.easywars.ui.warbase.WarBaseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout4"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutBase"
                android:padding="8dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ivTownHall"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvName"
                    tools:text="Enemy Name"
                    android:layout_toRightOf="@+id/ivTownHall"
                    android:layout_toEndOf="@+id/ivTownHall"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvClaimsComments"
                android:layout_above="@+id/etComment"
                android:layout_below="@+id/layoutBase"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_above="@+id/etComment"
                android:background="@drawable/shadow_bottom"
                android:id="@+id/layoutShadow"
                android:visibility="visible"
                android:alpha="1"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentLeft="false"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etComment"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/btnSend"
                android:layout_toStartOf="@+id/btnSend"
                android:inputType="textCapSentences|textShortMessage|textMultiLine"
                android:singleLine="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                android:id="@+id/btnSend"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="false"
                android:layout_marginRight="8dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/relativeLayout2"
            >

        </RelativeLayout>
    </RelativeLayout>

</layout>
