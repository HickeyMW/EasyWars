<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="wickeddevs.easywars.ui.noclan.join.JoinClanActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layoutMain"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Name:"
                android:id="@+id/tvMembers"
                android:textSize="20sp"
                android:layout_below="@+id/relativeLayout"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message:"
                android:id="@+id/textView5"
                android:textSize="20sp"
                android:layout_above="@+id/etMessage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSelectedName"
                android:layout_alignTop="@+id/tvMembers"
                android:layout_toRightOf="@+id/tvMembers"
                android:layout_toEndOf="@+id/tvMembers"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:ems="10"
                android:id="@+id/etMessage"
                android:layout_above="@+id/btnJoin"
                android:inputType="text|textMultiLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/ivBadge"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Defualt Name"
                    android:id="@+id/tvClanName"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ivBadge"
                    android:layout_toEndOf="@+id/ivBadge"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#G98T39"
                    android:id="@+id/tvClanTag"
                    android:layout_alignBottom="@+id/ivBadge"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/rvMembers"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/tvMembers"
                android:layout_above="@+id/textView5" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join"
                android:id="@+id/btnJoin"
                style="?attr/borderlessButtonStyle"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:visibility="invisible"/>
        </RelativeLayout>

    </RelativeLayout>
</layout>

